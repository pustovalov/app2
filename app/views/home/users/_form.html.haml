= simple_form_for user do |f|
  .form-group
    = f.input :email, as: :email, label: t(:email_label),
              input_html: { class: 'form-control', required: true,
              autofocus: true }
  .form-group
    = f.input :password, as: :password, label: t(:password_label),
              input_html: { class: 'form-control', required: true }
  .form-group
    = f.input :password_confirmation, as: :password,
              label: t(:password_confirmation_label),
              input_html: { class: 'form-control', required: true }
  = f.button :submit, t(:sing_up_label), class: 'btn btn-default'
