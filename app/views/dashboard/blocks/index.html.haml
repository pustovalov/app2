%table.table.table-hover.table-condensed
  %thead
    %tr
      %th Название
      %th{:colspan => "3"}
  %tbody
    - @blocks.each do |block|
      %tr.table.table-hover.table-condensed
        %td= block.title
        - if block.current?
          %td
            = link_to 'Сделать обычной', reset_as_current_block_path(block),
              method: :put
        - else
          %td
            = link_to 'Сделать текущей', set_as_current_block_path(block),
              method: :put
        %td= link_to 'Редактировать', edit_block_path(block)
        %td
          = link_to 'Удалить', block, method: :delete,
                                      data: { confirm: 'Удалить колоду?' }       
