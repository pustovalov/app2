%table.table.table-hover.table-condensed
  %thead
    %tr
      %th Оригинал
      %th Перевод
      %th Пересмотр
      %th{:colspan => "2"}
  %tbody
    - @cards.each do |card|
      %tr.table.table-hover.table-condensed
        %td= card.original_text
        %td= card.translated_text
        %td= card.review_date.strftime('%d.%m.%Y %H:%M:%S')
        %td= link_to 'Редактировать', edit_card_path(card)
        %td
          = link_to 'Удалить', card, method: :delete,
                               data: { confirm: 'Удалить запись?' }
